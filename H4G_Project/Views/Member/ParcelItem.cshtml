@{
    ViewData["Title"] = "Member";
    Layout = "~/Views/Shared/_Member.cshtml";
}

@model Parcel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          type="text/css" />
    <link rel="stylesheet" href="theme.css" type="text/css" />
    <link rel="stylesheet" href="static/theme.css" />
</head>

<body>
    <div class="py-5 text-center align-items-center d-flex" style="">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive" style="display: flex;  justify-content: center;">
                        <table>
                            <tr>
                                <td>Parcel ID: @Model.parcelId</td>
                                @if (Model.deliveryStatus == '0')
                                {
                                    <td>Status : Pending Delivery</td>
                                }
                                else if (Model.deliveryStatus == '1')
                                {
                                    <td>Status : Delivery to destination</td>
                                }
                                else if (Model.deliveryStatus == '2')
                                {
                                    <td>Status : delivery to airport</td>
                                }
                                else if (Model.deliveryStatus == '3')
                                {
                                    <td>Status : delivery completed</td>
                                }
                                else if (Model.deliveryStatus == '4')
                                {
                                    <td>Status : delivery failed</td>
                                }
                            </tr>
                            <tr>
                                <td>Parcel Weight</td>
                                <td>@Model.parcelWeight</td>
                            </tr>
                            <tr>
                                <td>From City and country</td>
                                <td>@Model.fromCity, @Model.fromCountry</td>
                            </tr>
                            <tr>
                                <td>To City and country</td>
                                <td>@Model.toCity, @Model.toCountry</td>
                            </tr>
                            <tr>
                                <td>Shipping rate</td>
                                <td>S$8.35/kg</td>
                            </tr>
                            <tr>
                                <td>Delivery Charge (Raw)</td>
                                <td>@Model.deliveryCharge</td>
                            </tr>
                            <tr>
                                <td>Delivery Charge (Rounded)</td>
                                <td>S$2.00</td>
                            </tr>
                            <tr>
                                <td>Delivery Charge (Final)</td>
                                <td>S$5.00</td>
                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</html>

