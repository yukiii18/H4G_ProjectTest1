@{
    ViewData["Title"] = "Member";
    Layout = "~/Views/Shared/_Member.cshtml";
}

@model Customer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          type="text/css" />
    <link rel="stylesheet" href="theme.css" type="text/css" />
    <link rel="stylesheet" href="static/theme.css" />
</head>

<body>
    <div class="py-5 text-center align-items-center d-flex" style="">
        <div class="container py-5">
            <div class="row">
                Welcome @Model.Member.name, you have @Model?.Inboxes?.Count pending notifications
            </div>
            <br>
            <br>
            <br>
            <div class='row'>
                <div class='col-md-6'>
                    <div style="display:flex; flex-direction: row; ">
                        <div style="width: 50%">
                            <span>Submit Feedback : </span>
                        </div>

                        <input type='text' class='form-control' placeholder='Enter Feedback' id='feedback'>
                    </div>
                    <br>

                    <div class="form-control">

                        <label for='rating'>Rating</label>

                        <label class='radio-inline' style="padding-left: 10px; padding-right: 10px;"><input type='radio' name='rating' value='1'>1</input></label>
                        <label class='radio-inline' style="padding-left: 10px; padding-right: 10px;"><input type='radio' name='rating' value='2'>2</input></label>
                        <label class='radio-inline' style="padding-left: 10px; padding-right: 10px;"><input type='radio' name='rating' value='3'>3</input></label>
                        <label class='radio-inline' style="padding-left: 10px; padding-right: 10px;"><input type='radio' name='rating' value='4'>4</input></label>
                        <label class='radio-inline' style="padding-left: 10px; padding-right: 10px;"><input type='radio' name='rating' value='5'>5</input></label>
                    </div>

                    <br>

                    <textarea style="height: auto;" rows="10" class='form-control' placeholder='Enter Comments' id='comments'></textarea>



                    <button class='btn btn-primary' onclick='submitFeedback()'>Post</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
<script>
    function submitFeedback() {
        var feedback = $('#feedback').val();
        var rating = $('input[name=rating]:checked').val();
        var comments = $('#comments').val();

        $.ajax({
            url: '/Member/SubmitFeedbackPost',
            type: 'POST',
            data: {
                feedback: feedback,
                rating: rating,
                comments: comments
            },
            success: function (data) {
                alert('Feedback submitted successfully');
            },
            error: function (data) {
                alert('Error submitting feedback');
            }
        });
    }
</script>
</html>

