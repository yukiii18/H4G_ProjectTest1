@model IEnumerable<H4G_Project.Models.Parcel>


@{
    ViewData["Title"] = "SelectParcel";
    Layout = "~/Views/Shared/_FrontOffice.cshtml";
}

<!DOCTYPE html>
<html>
<head>
	<!-- Use Unicode character encoding - multi-language compatibility -->
	<meta charset="utf-8">

	<!-- Set the initial view zooming scale for mobile device -->
	<meta name="viewport" content="width = device-width,
 initial-scale = 1" />

	<title>NP Courier Service</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

	<!-- Reference to customized styling for this website -->
	<link rel="stylesheet" type="text/css" href="~/css/CreateParcelRecord.css">
	<style>
		.flex-container{
			padding: 2rem 5rem;
		}
	</style>
</head>
<body>
	<div class="flex-container">
		<div>
			<form method="post" action="/FrontOffice/SelectParcel">
				<input type="text" name="id" />
				<button type="submit">Submit</button>
			</form>
			@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
			{
				<div class="error-message">@ViewBag.ErrorMessage</div>
			}
		</div>

		<h2>Unpaid Parcels : </h2>

		@using H4G_Project.Controllers
		@if (Model.ToList().Count == 0)
		{
			<p>There are no parcels to be paid.</p>
		}
		@if (Model.ToList().Count > 0)
		{
			<div class="table-responsive">
				<table id="viewStaff" class="table table-striped table-bordered">
					<thead class="table-dark">
						<tr>
							<th>ID</th>
							<th>Description</th>
							<th>Delivery Charge</th>
							<th>Currency</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{
							<tr>
								<td>@item.parcelId</td>
								<td>@item.itemDescription</td>
								<td>@item.deliveryCharge</td>
								<td>@item.currency</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
</body>
</html>












