@model IEnumerable<H4G_Project.Models.PaymentTransaction>

@{
	ViewData["Title"] = "View Payment Record";
	Layout = "~/Views/Shared/_FrontOffice.cshtml";
}
@using H4G_Project.Controllers

@if (Model.ToList().Count > 0)
{
	<div class="table-responsive">
		<table id="viewStaff" class="table table-striped table-bordered">
			<thead class="table-dark">
				<tr>
				<tr>
					<th>Transaction ID</th>
					<th>Parcel ID</th>
					<th>Amount</th>
					<th>Currency</th>
					<th>Transaction Type</th>
					<th>Transaction Date</th>
					<th></th>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>@item.transactionID</td>
						<td>@item.parcelID</td>
						<td>@item.amtTran</td>
						<td>@item.currency</td>
						<td>@item.tranType</td>
						<td>@item.tranDate</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<span style="color:red">No record found!</span>
}
