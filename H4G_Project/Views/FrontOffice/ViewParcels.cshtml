@model IEnumerable<H4G_Project.Models.Parcel>

@{
	ViewData["Title"] = "View Parcel Record";
	Layout = "~/Views/Shared/_FrontOffice.cshtml";
}
@using H4G_Project.Controllers

@if (Model.ToList().Count > 0)
{
	<div class="table-responsive">
		<table id="viewStaff" class="table table-striped table-bordered">
			<thead class="table-dark">
				<tr>
				<tr>
					<th>ID</th>
					<th>Description</th>
					<th>Sender Name</th>
					<th>Sender Tel No</th>
					<th>Receiver Name</th>
					<th>Receiver Tel No</th>
					<th>Delivery Address</th>
					<th>From City</th>
					<th>From Country</th>
					<th>To City</th>
					<th>To Country</th>
					<th>Parcel Weight</th>
					<th>Delivery Charge</th>
					<th>Currency</th>
					<th>Target Delivery Date</th>
					<th>Delivery Status</th>
					<th>DeliveryManID</th>
				</tr>
				
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>@item.parcelId</td>
						<td>@item.itemDescription</td>
						<td>@item.senderName</td>
						<td>@item.senderTelNo</td>
						<td>@item.receiverName</td>
						<td>@item.receiverTelNo</td>
						<td>@item.deliveryAddress</td>
						<td>@item.fromCity</td>
						<td>@item.fromCountry</td>
						<td>@item.toCity</td>
						<td>@item.toCountry</td>
						<td>@item.parcelWeight kg</td>
						<td>@item.deliveryCharge</td>
						<td>@item.currency</td>
						<td>@item.targetDeliveryDate</td>
						<td>@item.deliveryStatus</td>
						<td>@item.deliveryManId</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<span style="color:red">No record found!</span>
}
