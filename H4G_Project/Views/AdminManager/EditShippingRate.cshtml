@model H4G_Project.Models.ShippingRate

@{
    ViewBag.Title = "Edit Shipping Rate";
    Layout = "~/Views/Shared/_AdminManager.cshtml";
}
<style>
        /* Custom CSS for the colorful card */
        .colorful-card {
        background-color: #ADD8E6; /* Use your preferred background color */
        }
 </style>
<div class="container">
    <h4 class="mb-4">Shipping Rate</h4>
    <div class="card shadow rounded-lg border-0 animated fadeIn colorful-card">
        <div class="card-body">
            <form asp-action="EditShippingRate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ShippingRateID" class="control-label"></label>
                    <input asp-for="ShippingRateID" class="form-control" readonly />
                    <span asp-validation-for="ShippingRateID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fromCity" class="control-label"></label>
                    <input asp-for="fromCity" class="form-control" readonly />
                    <span asp-validation-for="fromCity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fromCountry" class="control-label"></label>
                    <input asp-for="fromCountry" class="form-control" readonly />
                    <span asp-validation-for="fromCountry" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="toCity" class="control-label"></label>
                    <input asp-for="toCity" class="form-control" readonly />
                    <span asp-validation-for="toCity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="toCountry" class="control-label"></label>
                    <input asp-for="toCountry" class="form-control" readonly />
                    <span asp-validation-for="toCountry" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="shippingRate" class="control-label"></label>
                    <input asp-for="shippingRate" class="form-control" />
                    <span asp-validation-for="shippingRate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="currency" class="control-label"></label>
                    <input asp-for="currency" class="form-control" readonly />
                    <span asp-validation-for="currency" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="transitTime" class="control-label"></label>
                    <input asp-for="transitTime" class="form-control" />
                    <span asp-validation-for="transitTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="lastUpdatedBy" class="control-label"></label>
                    <input asp-for="lastUpdatedBy" class="form-control" />
                    <span asp-validation-for="lastUpdatedBy" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

