<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        @@keyframes bounceAnimation {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); } /* Adjust the bounce height as needed */
}

        body, html {
            margin: 0;
            padding: 0;
        }
.bounce-effect {
  position: relative;
  display: inline-block;
  text-decoration: none;
}

.bounce-effect::before {
  content: "";
  position: absolute;
  top: 100%; /* Position the pseudo-element below the link */
  left: 0;
  width: 100%;
  height: 2px; /* Adjust the line height as needed */
  background-color: #000; /* Adjust the line color as needed */
  transform-origin: center;
  transform: scale(0, 1);
  transition: transform 0.3s;
}

.bounce-effect:hover::before {
  animation: bounceAnimation 1s infinite; /* Adjust the animation duration as needed */
  transform-origin: center;
  transform: scale(1, 1);
}
        #navbarItems {
            overflow: hidden;
            height: 0;
         }

            #navbarItems.active {
                height: auto;
            }

        
        .jumbotron {
            background-image: url('your-image-url');
            background-size: cover;
            background-position: center;
            height: 400px;
            color: #fff;
            text-align: center;
        }

            .jumbotron h1 {
                margin-top: 200px;
            }

        .nav-item {
            position: relative;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0%;
            height: 2px;
            background-color: #00CED1;
            transition: width 0.3s ease-in-out;

        }

        .nav-link:hover::before {
            width: 100%;
        }
        @@keyframes rotateClockwise {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(15deg); }
}

@@keyframes rotateCounterclockwise {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(-15deg); }
}

#logo {
  transition: transform 0.3s;
}

#logo:hover {
  animation: rotateClockwise 0.2s linear infinite alternate, rotateCounterclockwise 0.2s linear infinite alternate;
}
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index", "StationManager")">
                <img id="logo" src="/images/NpCourierLogoWhite.png" alt="logo" style="width:60px;margin-left:30px;">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-turquoise bounce-effect" asp-area="" asp-controller="StationManager" asp-action="Deliveries">
                            <span>Deliveries</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-turquoise bounce-effect" asp-area="" asp-controller="StationManager" asp-action="StaffView">
                            <span>Staffs</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-turquoise bounce-effect" asp-area="" asp-controller="StationManager" asp-action="FailureIssue">
                            <span>Issue Voucher</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-turquoise bounce-effect" asp-area="" asp-controller="StationManager" asp-action="Inbox">
                            <span>Inbox</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-turquoise bounce-effect" asp-area="" asp-controller="StationManager" asp-action="LogOut">
                            <span>Logout</span>
                        </a>
                    </li>
                   
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#navbarItems').removeClass('navbar-collapse'); // Remove the 'navbar-collapse' class to prevent Bootstrap's collapsing behavior
            $('#navbarItems').hide(); // Hide the navbar items when the document has loaded
            $('#logo').click(function () {
                $('#navbarItems').toggleClass('active');
                $('#logo').toggleClass('rotate');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
