<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> MINDS </title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Sidebar */
        .sidebar {
            background-color: #111827;
        }

        .sidebar-logo {
            width: 120px;
            height: auto;
            margin-bottom: 1rem;
        }

        .nav-link {
            color: #00A5E3;
            padding: 10px 15px;
        }

            .nav-link:hover {
                background-color: #1f2933;
                color: #ffffff;
            }
    </style>
</head>

<body>

    <!-- Mobile Toggle Button -->
    <button class="btn btn-dark d-md-none m-2"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#sidebarMenu">
        ☰ Menu
    </button>

    <div class="container-fluid">
        <div class="row flex-nowrap">

            <!-- Sidebar -->
            <div id="sidebarMenu"
                 class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 sidebar collapse d-md-block">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-3 text-white min-vh-100">

                    <a class="navbar-brand mb-3" href="@Url.Action("Index", "Staff")">
                        <img src="/images/MINDS_logo.png" alt="logo" class="sidebar-logo">
                    </a>

                    <ul class="nav nav-pills flex-column mb-auto w-100">

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Create" class="nav-link align-middle px-0">
                                <i class=" fa fa-plus"></i> <span class="ms-1 d-none d-sm-inline">Apply to be
                                    part of MINDS</span>
                            </a>
                        </li>

                        <li class="nav-item">
                        </li>
                        <a asp-area="" asp-controller="Home" asp-action="CreateVolunteer"
                            class="nav-link align-middle px-0">
                            <i class=" fa fa-plus"></i> <span class="ms-1 d-none d-sm-inline">Join us as
                                a volunteer</span>
                        </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="About" class="nav-link">
                                <i class="fa fa-address-book-o me-2"></i>
                                <span class="d-none d-sm-inline">About Us</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="ContactUs" class="nav-link">
                                <i class="fa fa-external-link me-2"></i>
                                <span class="d-none d-sm-inline">Contact Us</span>
                            </a>
                        </li>

                    </ul>

                    <hr class="text-secondary w-100">
                </div>
            </div>

            <!-- Main Content -->
            <div class="col py-3">
                <main role="main" class="container pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
