@{
    ViewData["Title"] = "Staff - Homepage";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>My Website</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Custom CSS styles for the homepage */
        .jumbotron {
            background-image: url('your-image-url');
            background-size: cover;
            background-position: center;
            height: 400px;
            color: #fff;
            text-align: center;
        }

        .jumbotron h1 {
            margin-top: 200px;
        }

        /* Animated CSS */
        .nav-item {
            position: relative;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0%;
            height: 2px;
            background-color: #00CED1;
            transition: width 0.3s ease-in-out;
        }

        .nav-link:hover::before {
            width: 100%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index", "Staff")">
            <img id="logo" src="/images/NpCourierLogoWhite.png" alt="logo" style="width:60px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="Calendar"><span>
                            Calendar</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Staff" asp-action="CreateEvent"><span>
                            Create Events</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Staff" asp-action="ViewAllEvents">
                        <span>
                            View All Events
                        </span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Staff" asp-action="AddUser"><span>
                            Add User</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Staff" asp-action="Reports"><span>
                            Reports</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Application" asp-action="Index"><span>
                            View Applications</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row">
        <div class="col-sm-12">
            @RenderBody()
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>