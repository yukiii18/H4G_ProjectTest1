@{
    ViewData["Title"] = "Staff - Homepage";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>My Website</title>

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- FullCalendar CSS (if not already included in child view) -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" rel="stylesheet" />

    <style>
        /* ===================== NAVBAR ===================== */
        .navbar-custom {
            background-color: #ffffff;
            border-bottom: 4px solid #00A5E3;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
            padding: 0.6rem 1.5rem;
        }

            .navbar-custom .navbar-brand img {
                height: 48px;
            }

            .navbar-custom .nav-link {
                color: #00A5E3 !important;
                font-weight: 600;
                padding: 0.75rem 1rem;
                position: relative;
                transition: all 0.25s ease;
            }

                .navbar-custom .nav-link:hover {
                    color: #008bbf !important;
                }

                .navbar-custom .nav-link::after {
                    content: "";
                    position: absolute;
                    left: 50%;
                    bottom: 6px;
                    width: 0;
                    height: 3px;
                    background-color: #00A5E3;
                    border-radius: 2px;
                    transition: all 0.3s ease;
                }

                .navbar-custom .nav-link:hover::after {
                    width: 70%;
                    left: 15%;
                }

            .navbar-custom .navbar-toggler {
                border-color: #00A5E3;
            }

            .navbar-custom .navbar-toggler-icon {
                background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(0,165,227,1)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
            }

        /* ===================== PAGE ===================== */
        body {
            background-color: #F5F9FC;
        }

        .container,
        .container-fluid {
            padding-top: 1.5rem;
        }

        /* ===================== CARD ===================== */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        }

        .card-header {
            background-color: #ffffff;
            font-weight: 600;
            border-bottom: 1px solid #eaeaea;
        }

        /* ===================== FULLCALENDAR (WHITE BODY) ===================== */
        #calendar {
            background-color: #ffffff;
            padding: 16px;
            border-radius: 12px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        }

        .fc {
            background-color: #ffffff;
        }

        .fc-theme-standard td,
        .fc-theme-standard th {
            background-color: #ffffff;
        }

        .fc-header-toolbar {
            background-color: #ffffff;
            padding: 10px;
            border-radius: 10px;
        }

        .fc-theme-standard .fc-scrollgrid {
            border: none;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="@Url.Action("Index", "Staff")">
            <img id="logo" src="/images/MINDS_logo.png" alt="logo">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNav">
            <ul class="navbar-nav flex-grow-1">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="CreateEvent">Create Events</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="ViewAllEvents">View All Events</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="AddUser">Add User</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="AddNewStaff">Add Staff</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="Reports">Reports</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="ViewUsers"><span>
                            Manage Users</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Application" asp-action="Index"><span>
                            View Applications</span></a>
                </li>

                <li class="nav-item ml-auto">
                    <a class="nav-link" asp-controller="User" asp-action="Logout">Logout</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
