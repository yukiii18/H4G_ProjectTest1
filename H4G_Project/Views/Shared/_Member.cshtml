@{
    ViewData["Title"] = "User - Homepage";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>My Website</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Custom CSS styles for the homepage */
        .jumbotron {
            background-image: url('your-image-url');
            background-size: cover;
            background-position: center;
            height: 400px;
            color: #fff;
            text-align: center;
        }

        .jumbotron h1 {
            margin-top: 200px;
        }

        /* Animated CSS */
        .nav-item {
            position: relative;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0%;
            height: 2px;
            background-color: #00CED1;
            transition: width 0.3s ease-in-out;
        }

        .nav-link:hover::before {
            width: 100%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index", "User")">
            <img id="logo" src="/images/NpCourierLogoWhite.png" alt="logo" style="width:60px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="ScanQR"><span>Scan your Attendance</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="Event" asp-action="Index"><span>Events
                        </span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="ViewAllEvents"><span>View My Events</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="Notifications">
                        <span>Notifications</span>
                        <span id="notificationBadge" class="badge badge-danger ml-1" style="display: none;">0</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-turquoise" asp-controller="User" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row">
        <div class="col-sm-12">
            @RenderBody()
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
    <!-- Notification Badge Script -->
    <script>
        // Load notification count when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadNotificationCount();
            
            // Refresh notification count every 30 seconds
            setInterval(loadNotificationCount, 30000);
        });

        async function loadNotificationCount() {
            try {
                const response = await fetch('/User/GetUnreadCount');
                const count = await response.json();
                
                const badge = document.getElementById('notificationBadge');
                if (count > 0) {
                    badge.textContent = count;
                    badge.style.display = 'inline';
                } else {
                    badge.style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading notification count:', error);
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>