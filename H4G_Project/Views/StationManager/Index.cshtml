@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StationManager.cshtml";
}
<style>
    body, html {
        margin: 0;
        padding: 0;
        background-color:#eee;
    }
    h1{
        margin:0;
    }
</style>
<div class="jumbotron text-center" style="background-image: url('/images/StationManagerHome.png'); background-size: cover; background-position: top;">
    <div class="jumbotron text-center" style="background-image: url('/images/StationManagerHome.png');border-radius: 5px; opacity: 0.8;">
        <h1 font-weight: bold;">Welcome, Station Manager!</h1>
        <!--<p class="lead" style="color: black; ">Manage and monitor the delivery system with ease.</p>-->
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Shipping Rates</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage Deliveries and View Parcel Records</p>
                    <a href="@Url.Action("Deliveries", "StationManager")" class="btn btn-primary">View Deliveries</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Cash Vouchers</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage cash vouchers for Members.</p>
                    <a href="@Url.Action("Voucher", "StationManager")" class="btn btn-primary">View Voucher</a>
                </div>
            </div>
        </div>
    </div>
</div>
    
