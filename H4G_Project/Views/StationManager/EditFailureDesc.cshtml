@model H4G_Project.Models.DeliveryFailure
@{
    ViewBag.Title = "Edit Follow Up Description";
    Layout = "~/Views/Shared/_StationManager.cshtml";
}
<div class="container mt-4">
    <h4>Edit Follow Up Description</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="EditFailureDesc" class="border rounded p-4 bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="reportID" class="col-sm-3 col-form-label font-weight-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="reportID" class="form-control" readonly />
                        <span asp-validation-for="reportID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="parcelID" class="col-sm-3 col-form-label font-weight-bold" hidden></label>
                    <div class="col-sm-9">
                        <input asp-for="parcelID" class="form-control" hidden />
                        <span asp-validation-for="parcelID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="deliveryManID" class="col-sm-3 col-form-label font-weight-bold" hidden></label>
                    <div class="col-sm-9">
                        <input asp-for="deliveryManID" class="form-control" hidden />
                        <span asp-validation-for="deliveryManID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="failureType" class="col-sm-3 col-form-label font-weight-bold" hidden></label>
                    <div class="col-sm-9">
                        <input asp-for="failureType" class="form-control" hidden />
                        <span asp-validation-for="failureType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="description" class="col-sm-3 col-form-label font-weight-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="description" class="form-control" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="stationMgrID" class="col-sm-3 col-form-label font-weight-bold" hidden></label>
                    <div class="col-sm-9">
                        <input asp-for="stationMgrID" class="form-control" hidden />
                        <span asp-validation-for="stationMgrID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="followUpAction" class="col-sm-3 col-form-label font-weight-bold"></label>
                    <div class="col-sm-9">
                        <textarea asp-for="followUpAction" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="followUpAction" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="dateCreated" class="col-sm-3 col-form-label font-weight-bold" hidden></label>
                    <div class="col-sm-9">
                        <input asp-for="dateCreated" class="form-control" hidden />
                        <span asp-validation-for="dateCreated" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="FailureIssue" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    /* Custom CSS styles */
    .form-control[readonly] {
        background-color: #f8f9fa; /* Light gray background for readonly fields */
    }

    form {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

