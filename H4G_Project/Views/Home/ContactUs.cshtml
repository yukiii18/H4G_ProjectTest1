@model IEnumerable<H4G_Project.Models.Staff>
@{
	ViewData["Title"] = "ContactUs";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ContactUs</h1>
@using H4G_Project.Controllers

@if (Model.ToList().Count > 0)
{
	<div class="table-responsive">
		<table id="viewStaff" class="table table-striped table-bordered">
			<thead class="table-dark">
				<tr>
				<tr>
					<th>Staff Name</th>
					<th>Appointment</th>
					<th>Office Tel No</th>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Username</td>
						<td>@item.Email</td>
						<td>@item.LastDayOfService</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<span style="color:red">No record found!</span>
}